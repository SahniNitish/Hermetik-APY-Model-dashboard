# APY Data Miner - Local Development Environment
# Copy this to .env and fill in your values

# Alchemy API Key (get from https://dashboard.alchemy.com)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# PostgreSQL Database (for local testing)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=apyminer
DB_USER=apyminer
DB_PASSWORD=your_local_password

# Optional: Enable SSL for database connection
DB_SSL=false
